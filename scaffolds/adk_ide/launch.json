{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ADK API Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scaffolds/adk_ide/.venv/bin/adk",
            "python": "${workspaceFolder}/scaffolds/adk_ide/.venv/bin/python",
            "args": [
                "api_server",
                "${workspaceFolder}/scaffolds/adk_ide",
                "--port",
                "8502",
                "--reload_agents"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python Debugger: ADK Web",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scaffolds/adk_ide/.venv/bin/adk",
            "python": "${workspaceFolder}/scaffolds/adk_ide/.venv/bin/python",
            "args": [
                "web",
                "${workspaceFolder}/scaffolds/adk_ide",
                "--port",
                "8501",
                "--reload_agents"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "python": "${workspaceFolder}/scaffolds/adk_ide/.venv/bin/python",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Debug Remote A2A Agent Example",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scaffolds/adk_ide/.venv/bin/uvicorn",
            "args": [
                "agent_05_remote_sub_agent_a2a.remote_weather_agent:a2a_app",
                "--host", "localhost",
                "--port", "10020"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/scaffolds/adk_ide/"
            },
            "console": "integratedTerminal"
        },
    ]
}

